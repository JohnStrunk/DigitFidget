{
  // JSON5 spec: https://json5.org/
  // Renovate docs: https://docs.renovatebot.com/configuration-options/

  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",  // Use Renovate best-practices
